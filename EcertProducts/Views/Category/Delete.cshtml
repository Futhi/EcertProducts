@model DataAccess.ApplicationContext.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Category Confirmation for<b> @Model.Name</b></h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Delete">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" >
                        <label asp-for="IsActive" class="control-label">Is Active:</label>

                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="radio" readonly value="true" id="isActiveTrue" checked>
                            <label class="form-check-label" for="isActiveTrue">Yes</label>
                        </div>

                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="radio" readonly value="false" id="isActiveFalse">
                            <label class="form-check-label" for="isActiveFalse">No</label>
                        </div>

                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group  mb-3">
                        <label asp-for="CategoryCode" class="control-label"></label>
                        <input asp-for="CategoryCode" class="form-control" readonly />
                        <span asp-validation-for="CategoryCode" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Delete" class="float-right btn btn-danger " asp-action="DeleteConfirmed" asp-route-id="@Model.Id" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
